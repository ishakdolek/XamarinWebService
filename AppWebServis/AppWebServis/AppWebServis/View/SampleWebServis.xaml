<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppWebServis.View.SampleWebServis">
 
    <StackLayout Orientation="Vertical">
      <ListView x:Name="lstWebService" ItemsSource="{Binding .}">
        <ListView.Header>
          <Label Text="Veri Çekme İşlemi"></Label>
        </ListView.Header>
        <ListView.ItemTemplate>
          <DataTemplate>
            <Label Text="{Binding Email}" x:Name="lblName"></Label>
         </DataTemplate>
        </ListView.ItemTemplate>
      </ListView>
    </StackLayout>
</ContentPage>